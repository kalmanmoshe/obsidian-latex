{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "NodeNext",
    "target": "ES6",
    "allowJs": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "checkJs": false,
    "isolatedModules": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true, // Enables iteration over `RegExpMatchArray`
    "lib": [
      "esnext", // Latest JavaScript features
      "dom",
      "webworker"
    ],
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "**/*.ts",
    "src/latexRender/PdfTeXEngine.ts",
    "src/latexRender/swiftlatexpdftex.worker.js",
    "src/latexRender/logs/HumanReadableLogsRules.tsx",
    "src/latexRender/parse/autoParse"
  ],
  "exclude": ["node_modules", "dist"]
}
